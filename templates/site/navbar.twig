<nav id="navbar" style="overflow:hidden;">
  <div class="grid-container">
    <div class="grid-x grid-margin-x">
      <div class="cell small-12 medium-12 main-menu " style="position: relative;">
        <ul class="nav-main">
          {% set submenu_counter = 0 %}
          {% for item in menu.items %}
              <li class="nav-main-item {{ item.classes|join(' ') }}">
                {% if item.children %}
                <div class="toggle-container">
                {% endif %}
                  <a class="nav-main-link" href="{{ item.link }}">{{ item.title }}</a>
                  {% if item.children %}
                  <a href="#" class="toggle-submenu" data-submenu="submenu-{{ submenu_counter }}">
                    <i class="fa fa-chevron-right"></i>
                  </a>
                </div>
                <ul class="submenu" id="submenu-{{ submenu_counter }}">
                    <li><a href="#" class="close-submenu button back" data-submenu="submenu-{{ submenu_counter }}">Terug</a></li>
                    {% for child in item.children %}
                        <li class="submenu-item">
                            <a href="{{ child.link }}" class="child-link">{{ child.title }}</a>
                        </li>
                    {% endfor %}
                </ul>
                  {% set submenu_counter = submenu_counter + 1 %}
                  {% endif %}
              </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</nav>
