{% extends 'templates/site/base.twig' %}
{% block content %}
<section id="home-content">
  <div class="grid-container">
    <div class="grid-x grid-margin-x">
      <div class="cell medium-6">
        <h1>{{ post.title  }}</h1>
        <h2>{{ carbon_meta('subtitle', post.ID)  }}</h2>
      </div>
      <div class="cell medium-6">
        {{ post.content | wpautop }}
      </div>
    </div>
  </div>
</section>
{% endblock %}
